---
layout: drink
---
{% assign counter = 1 %}
{% assign total = site.drinks | size %}
[{% for post in site.drinks %}
    {
        "title": "{{ post.title }}",
        "image": "{{ site.baseurl }}/images/{{ post.image }}"
    }{% if counter == total %}{% else %},{% endif %}
{% assign counter = counter |plus: 1 %}{% endfor %}]
